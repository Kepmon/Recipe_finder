---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
	<header class="header">
		<div class="header__background">
				<div class="header__shadow">
						<h1 class="header__title">Welcome to our recipe generator</h1>
						<p class="header__text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nihil numquam, nostrum vel exercitationem hic molestiae dolores laborum. Optio, repellat rem.</p>
				</div>
				<a href="#main"><i class="fa-solid fa-angle-down header__arrow"></i></a>
		</div>
</header>

<main class="main" id="main">
		<div class="container">
				<form class="main__form">
						<h2 class="main__form-title">Choose desired criteria for your recipe</h2>
						<div class="main__form-options">
