---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import DownChevron from '../components/svgs/DownChevron.astro'
import Form from '../components/Form.svelte'
---

<Layout>
  <Header />
  <main id="main">
    <Form client:only="svelte">
      <DownChevron slot="chevron" />
    </Form>
  </main>
  <Footer />
</Layout>

<style>
  main {
    --main-spacer: 2rem;
    --chevron-width: 0.85rem;
    --chevron-fill: hsl(var(--black-color));
    padding-block-start: var(--main-spacer);
  }
</style>
